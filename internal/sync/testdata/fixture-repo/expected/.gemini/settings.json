{
  "tools": {
    "allowed": [
      "run_shell_command(git status)",
      "run_shell_command(ls)"
    ]
  },
  "mcpServers": {
    "agent-layer": {
      "command": "al",
      "args": [
        "mcp-prompts"
      ],
      "env": {
        "AL_REPO_ROOT": "__REPO_ROOT__"
      },
      "trust": true
    },
    "example": {
      "httpUrl": "https://mcp.example.com?token=${AL_EXAMPLE_TOKEN}",
      "headers": {
        "Authorization": "Bearer ${AL_EXAMPLE_TOKEN}"
      },
      "trust": true
    }
  }
}

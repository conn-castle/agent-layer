{
  "mcpServers": {
    "agent-layer": {
      "type": "stdio",
      "command": "al",
      "args": [
        "mcp-prompts"
      ],
      "env": {
        "AL_REPO_ROOT": "__REPO_ROOT__"
      }
    },
    "example": {
      "type": "http",
      "url": "https://mcp.example.com?token=${AL_EXAMPLE_TOKEN}",
      "headers": {
        "Authorization": "Bearer ${AL_EXAMPLE_TOKEN}"
      }
    }
  }
}
